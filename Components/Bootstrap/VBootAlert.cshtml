@inherits VAlert


@functions{
    protected override void OnInit() {
        base.OnInit();

        RectStyleDict[CssHelper.BackgroundColor] = "#d4edda";
        RectStyleDict[CssHelper.Padding] = ".75rem 1.25rem";
        RectStyleDict[CssHelper.BorderRadius] = ".25rem";

        LabelStyleDict[CssHelper.FontFamily] = "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,\"Helvetica Neue\",Arial,\"Noto Sans\",sans-serif,\"Apple Color Emoji\",\"Segoe UI Emoji\",\"Segoe UI Symbol\",\"Noto Color Emoji\"";
        LabelStyleDict[CssHelper.FontSize] = "1rem";
    }


    #region OnParametersSetAsync
    protected override async Task OnParametersSetAsync() {
        await base.OnParametersSetAsync();
        switch (base.AlertType) {
            case AlertType.Danger:
                RectStyleDict[CssHelper.BackgroundColor] = "#f8d7da";
                RectStyleDict[CssHelper.Border] = "1px solid #f5c6cb";
                LabelStyleDict[CssHelper.Color] = "#721c24";
                break;
            case AlertType.Success:
                RectStyleDict[CssHelper.BackgroundColor] = "#d4edda";
                RectStyleDict[CssHelper.Border] = "1px solid #c3e6cb";
                LabelStyleDict[CssHelper.Color] = "#155724";
                break;
            case AlertType.Primary:
                RectStyleDict[CssHelper.BackgroundColor] = "#cce5ff";
                RectStyleDict[CssHelper.Border] = "1px solid #b8daff";
                LabelStyleDict[CssHelper.Color] = "#004085";
                break;
        }
        base.UpdateStyle();
    }
    #endregion
}
